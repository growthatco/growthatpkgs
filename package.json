{
	"name": "growthatpkgs",
	"private": false,
	"scripts": {
		"lint": "mega-linter-runner --env MEGALINTER_CONFIG=.mega.yaml",
		"prepare": "husky install",
		"release": "semantic-release --ci --extends ./.release.json",
		"update": "run-s \"update:*\"",
		"update:upgrade": "ncu --upgrade --packageFile package.json",
		"update:install": "npm install"
	},
	"devDependencies": {
		"@google/semantic-release-replace-plugin": "^1.1.0",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^7.0.0",
		"mega-linter-runner": "^4.45.0",
		"npm-check-updates": "^11.8.5",
		"npm-run-all": "^4.1.5",
		"prettier": "2.3.2",
		"semantic-release": "^17.4.7"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
